@page
@model WebApp_Security.UnderTheHood.Pages.Account.LoginModel
@{
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @* user name *@
        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="@Model.Credential.UserName" class="form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.Credential.UserName" class="form-control" type="text" />
            </div>
            <span asp-validation-for="@Model.Credential.UserName" class="text-danger"></span>
        </div>

        @* password *@
        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="@Model.Credential.Password" class="form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.Credential.Password" class="form-control" type="password" />
            </div>
            <span asp-validation-for="@Model.Credential.Password" class="text-danger"></span>
        </div>

        @* Remember Login *@
        <div class="row mb-3">
            <div class="col-2">
            </div>
            <div class="col-5">
                <label asp-for="@Model.Credential.RemeberLogin" class="form-check-label me-2"></label>
                <input asp-for="@Model.Credential.RemeberLogin" class="form-check-input" type="checkbox" />
            </div>
        </div>




        @* submit *@
        <div class="row">
            <div class="col-2">
                <input class="btn btn-primary" type="submit" value="Login" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>
